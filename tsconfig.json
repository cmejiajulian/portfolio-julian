{
  "compilerOptions": {
    "module": "ES2020",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": [
      "astro/client",
      "react",
      "dom"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*",
    "astro.config.ts"
  ]
}
